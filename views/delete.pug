extends layout

block content
  
  table(class="table")
    thead
      tr
        th Name
        th Jersey No
        th Age
        th Country
        th Position
        th Goals Scored
        th Clean Sheet
    each player, i in players
      tr
        td= player.name
        td= player.jersey
        td= player.age
        td= player.country
        td= player.position
        td= player.goalScored
        td= player.cleansheet
        td
          a.btn.btn-danger.delete_player(href='#', data-id = player._id,  value = "Delete") Delete
